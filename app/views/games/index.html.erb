<h1 style='text-align: center'>Insert chess app here</h1>
<br>
<h2>
    <%= link_to "New Game", new_game_path, class: "btn btn success " %>
    <h2>List of Available Games</h2>
    <br>
    <section class='open-games'>
        <% if @available_games.present? %>
        <h4>Open games</h4>
        <% end %>
        <br>
        <% @available_games.each do |game| %>
        <div class="col-xs-12 col-sm-6">
            <div class="game text-center">
                <p>
                    #list available games and
                    #display the users email
                    #button to join
                    <% black_player = User.find_by(id: game.black_player_id) %>
                    User.find(game.black_player_id)&.email
                    <%= simple_form_for game, :method => :put do |f| %>
                    <%= f.input :white_player_id, :as => :hidden, :input_html => { :value => current_user.id } %>
                    <%= f.submit 'Join Game' %>
                    <% end %>
                </p>
            </div>
        </div>
        <% end %>
    </section>